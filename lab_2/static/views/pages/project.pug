extends ../layout.pug

block prepend styles
  link(rel='stylesheet' href='//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css')

block content
  div(class='breadcrumb')
    li= title
  form(id='project-add-form' name='project-add-form' class='form-inline' action='')
    div(class='form-group')
      div(class='col-md-3')
        label(for='projectName') Project Name
      div(class='col-md-9')
        input(id='projectName' name='projectName' value='' class='form-control')
    div(class='form-group')
      div(class='col-md-3')
        label(for='owner') Owner
      div(class='col-md-9')
        input(id='owner' name='owner' value='' class='form-control')        
    div(class='form-group')
      div(class='col-md-12')
        button(type='submit' class='btn btn-primary') Create
    div.list-wrapper
      table(id='project-list')
block append scripts
  script(src='/static/js/models/project.js')
  script(src='//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
  script(src='/static/js/views/project.js')
      